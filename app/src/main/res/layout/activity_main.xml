<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/md_theme_light_outlineVariant"
    tools:context=".MainActivity">

    <View
        android:id="@+id/view"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:background="#000000" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="7dp" />

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="372dp"
        android:layout_height="48dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="19dp"
        android:background="@color/md_theme_light_primaryContainer"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view" />

    <TableLayout
        android:layout_width="180dp"
        android:layout_height="202dp"
        android:layout_marginBottom="134dp"
        android:background="@color/md_theme_light_primaryContainer"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="105dp">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/buttonFor1"
                android:layout_width="55dp"
                android:layout_height="wrap_content"
                android:text="1" />

            <Button
                android:id="@+id/buttonFor2"
                android:layout_width="55dp"
                android:layout_height="48dp"
                android:text="2" />

            <Button
                android:id="@+id/buttonFor3"
                android:layout_width="55dp"
                android:layout_height="48dp"
                android:text="3" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:dividerPadding="5dp">

            <Button
                android:id="@+id/buttonFor4"
                android:layout_width="55dp"
                android:layout_height="48dp"
                android:text="4" />

            <Button
                android:id="@+id/buttonFor5"
                android:layout_width="55dp"
                android:layout_height="48dp"
                android:text="5" />

            <Button
                android:id="@+id/buttonFor6"
                android:layout_width="55dp"
                android:layout_height="48dp"
                android:text="6" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/buttonFor9"
                android:layout_width="55dp"
                android:layout_height="48dp"
                android:text="9" />

            <Button
                android:id="@+id/buttonFor8"
                android:layout_width="55dp"
                android:layout_height="48dp"
                android:text="8" />

            <Button
                android:id="@+id/buttonFor7"
                android:layout_width="55dp"
                android:layout_height="48dp"
                android:text="7" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/buttonFor0"
                android:layout_width="55dp"
                android:layout_height="48dp"
                android:text="0" />

            <Button
                android:id="@+id/buttonFor."
                android:layout_width="55dp"
                android:layout_height="48dp"
                android:text="." />

            <Button
                android:id="@+id/buttonForNegative"
                android:layout_width="55dp"
                android:layout_height="48dp"
                android:text="(-)" />
        </TableRow>

    </TableLayout>

    <LinearLayout
        android:layout_width="60dp"
        android:layout_height="305dp"
        android:layout_marginEnd="16dp"
        android:background="@color/md_theme_light_primaryContainer"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteY="292dp">

        <Button
            android:id="@+id/buttonForExponent"
            style="@style/RectButtons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="^" />

        <Button
            android:id="@+id/buttonForAddition"
            style="@style/RectButtons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="+" />

        <Button
            android:id="@+id/buttonForSubtraction"
            style="@style/RectButtons"
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:text="-" />

        <Button
            android:id="@+id/buttonForMultiplication"
            style="@style/RectButtons"
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:text="x" />

        <Button
            android:id="@+id/buttonForDivision"
            style="@style/RectButtons"
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:text="/" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        tools:layout_editor_absoluteX="132dp"
        tools:layout_editor_absoluteY="696dp" />

    <TableLayout
        android:layout_width="72dp"
        android:layout_height="94dp"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteY="164dp"
        android:layout_marginEnd="20dp"> <!--@dimens/margins didn't work-->



        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/upArrowButton"
                style="@style/ArrowButtons"
                app:srcCompat="@drawable/up_arrow" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/leftArrowButton"
                style="@style/ArrowButtons"
                app:srcCompat="@drawable/left_arrow" />

            <ImageButton
                android:id="@+id/rightArrowButton"
                style="@style/ArrowButtons"
                app:srcCompat="@drawable/right_arrow" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/downArrowButton"
                style="@style/ArrowButtons"
                app:srcCompat="@drawable/down_arrow" />
        </TableRow>
    </TableLayout>

    <Button
        android:id="@+id/buttonForExponent2"
        style="@style/RectButtons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="^"
        tools:layout_editor_absoluteX="23dp"
        tools:layout_editor_absoluteY="104dp" />


</androidx.constraintlayout.widget.ConstraintLayout>